{
  "extends": "./.nuxt/tsconfig.json",
  "exclude": ["scripts/**/*.ts"],
  "compilerOptions": {
    "types": [
      "@pinia/nuxt",
      "@nuxtjs/sitemap",
      "@nuxtjs/i18n",
      "@types/google.accounts",
      "@types/gtag.js"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true
  }
}
